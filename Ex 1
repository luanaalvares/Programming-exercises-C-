#include<stdio.h>
#include<stdlib.h>
#include<locale.h>
#include<time.h>

int dados[30];
void sorteiadados();
void classificados();
int busca();

int main(){
    setlocale(LC_ALL,"Portuguese");
    sorteiadados();
    classificados();
    for(int i = 0; i < 30; i++){
        printf("%i ",dados[i]);
    } 
    busca();
    system("pause");    
}

void sorteiadados(){
    srand(time(NULL));
    for(int i = 0; i < 30; i++){
        dados[i] = rand() % 501;       
    }     
}

void classificados(){
    int aux;
    for(int i = 0; i < 29; i++){
            for(int x = i + 1; x < 30; x++){
                    if(dados[i] > dados[x]){
                                aux = dados[i];
                                dados[i] = dados[x];
                                dados[x] = aux;   
                    }
            }
    }
}

int busca(){
    int num;
    bool x;
    printf("\nDigite um número para saber se o mesmo está no vetor: ");
    scanf("%i",&num);
    fflush(stdin);
    for(int i = 0; i < 30; i++){
            if(num == dados[i]){
                   x = true;
            }
    }
            if(x == true){ 
                   printf("O número %i está nos dados\n",num);
            }
            else{
                   printf("O número %i não está nos dados\n",num);
                   return(0);
            }
}
